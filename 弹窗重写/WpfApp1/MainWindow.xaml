<local:WindowBase x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Add User Bond" Height="450" Width="800"
        Icon="/WpfApp1;component/Resources/产品logo.png" >
    <local:WindowBase.Resources>
        <Style x:Key="Hearderstyle" TargetType="{x:Type local:WindowBase}" x:Shared="False">
            <Setter Property="HeaderBackground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="Black"></GradientStop>
                        <GradientStop Offset="1" Color="White"></GradientStop>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </local:WindowBase.Resources>


</local:WindowBase>
